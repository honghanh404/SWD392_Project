<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
//vietDung
        <servlet-name>ViewRequest</servlet-name>
        <servlet-class>controller.ViewRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewHouse</servlet-name>
        <servlet-class>controller.ViewHouse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportView</servlet-name>
        <servlet-class>controller.ReportView</servlet-class>
//
        <servlet-name>UserBlogServlet</servlet-name>
        <servlet-class>controller.UserBlogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestManagementController</servlet-name>
        <servlet-class>controller.RequestManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRequestController</servlet-name>
        <servlet-class>controller.AddRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteRequestController</servlet-name>
        <servlet-class>controller.DeleteRequestController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
// vietDung
        <servlet-name>ViewRequest</servlet-name>
        <url-pattern>/ViewRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewHouse</servlet-name>
        <url-pattern>/ViewHouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportView</servlet-name>
        <url-pattern>/ReportView</url-pattern>
//
        <servlet-name>UserBlogServlet</servlet-name>
        <url-pattern>/userblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestManagementController</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRequestController</servlet-name>
        <url-pattern>/addrequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteRequestController</servlet-name>
        <url-pattern>/deleterequest</url-pattern>

    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
